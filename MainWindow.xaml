<Window x:Class="MarkdownJsonEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Markdown JSON Editor" Height="700" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ToolBar Grid.Row="0" Padding="5">
            <Button Name="LoadJsonButton" Content="JSON Load" Padding="10,5" Margin="2" Click="LoadJsonButton_Click" ToolTip="Open JSON file"/>
            <Button Name="ImportClipboardButton" Content="Import" Padding="10,5" Margin="2" Click="ImportClipboardButton_Click" ToolTip="Import from clipboard"/>
            <Separator/>
            <Button Name="ExportJsonButton" Content="Export JSON" Padding="10,5" Margin="2" Click="ExportJsonButton_Click" ToolTip="Export as JSON"/>
            <Separator/>
            <Button Name="ClearButton" Content="Clear" Padding="10,5" Margin="2" Click="ClearButton_Click" ToolTip="Clear content"/>
            <Separator/>
            <Button Name="UndoButton" Content="Undo" Padding="10,5" Margin="2" Click="UndoButton_Click" ToolTip="Undo (Ctrl+Z)"/>
            <Button Name="RedoButton" Content="Redo" Padding="10,5" Margin="2" Click="RedoButton_Click" ToolTip="Redo (Ctrl+Y)"/>
        </ToolBar>
        
        <ToolBar Grid.Row="1" Padding="5">
            <Button Name="BoldButton" Content="B" FontWeight="Bold" Padding="10,5" Margin="2" Click="BoldButton_Click" ToolTip="Bold"/>
            <Button Name="ItalicButton" Content="I" FontStyle="Italic" Padding="10,5" Margin="2" Click="ItalicButton_Click" ToolTip="Italic"/>
            <Separator/>
            <Button Name="H1Button" Content="H1" FontWeight="Bold" Padding="10,5" Margin="2" Click="H1Button_Click" ToolTip="Header 1"/>
            <Button Name="H2Button" Content="H2" FontWeight="Bold" Padding="10,5" Margin="2" Click="H2Button_Click" ToolTip="Header 2"/>
            <Button Name="H3Button" Content="H3" FontWeight="Bold" Padding="10,5" Margin="2" Click="H3Button_Click" ToolTip="Header 3"/>
            <Separator/>
            <Button Name="ListButton" Content="List" Padding="10,5" Margin="2" Click="ListButton_Click" ToolTip="Bullet List"/>
            <Button Name="NumberedListButton" Content="1. List" Padding="10,5" Margin="2" Click="NumberedListButton_Click" ToolTip="Numbered List"/>
            <Button Name="QuoteButton" Content="Quote" Padding="10,5" Margin="2" Click="QuoteButton_Click" ToolTip="Quote"/>
            <Separator/>
            <Button Name="LinkButton" Content="Link" Padding="10,5" Margin="2" Click="LinkButton_Click" ToolTip="Insert Link"/>
            <Button Name="InsertImageButton" Content="Image" Padding="10,5" Margin="2" Click="InsertImageButton_Click" ToolTip="Insert Image"/>
            <Separator/>
            <Button Name="CodeButton" Content="Code" Padding="10,5" Margin="2" Click="CodeButton_Click" ToolTip="Code"/>
            <Separator/>
            <Button Name="HighlightYellowButton" Content="Yellow" Background="#FFFF00" Padding="10,5" Margin="2" Click="HighlightYellowButton_Click" ToolTip="Yellow Highlight"/>
            <Button Name="HighlightGreenButton" Content="Green" Background="#90EE90" Padding="10,5" Margin="2" Click="HighlightGreenButton_Click" ToolTip="Green Highlight"/>
            <Button Name="HighlightRedButton" Content="Red" Background="#FFB6C1" Padding="10,5" Margin="2" Click="HighlightRedButton_Click" ToolTip="Red Highlight"/>
            <Button Name="HighlightBlueButton" Content="Blue" Background="#ADD8E6" Padding="10,5" Margin="2" Click="HighlightBlueButton_Click" ToolTip="Blue Highlight"/>
        </ToolBar>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <DockPanel Grid.Column="0">
                <Label DockPanel.Dock="Top" Content="Markdown Editor" FontWeight="Bold" Padding="10,5"/>
                <wv2:WebView2 Name="EditorBrowser"/>
            </DockPanel>
            
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#DDD"/>
            
            <DockPanel Grid.Column="2">
                <Label DockPanel.Dock="Top" Content="Preview" FontWeight="Bold" Padding="10,5"/>
                <wv2:WebView2 Name="PreviewBrowser"/>
            </DockPanel>
        </Grid>
        
        <StatusBar Grid.Row="3" Height="25">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
