{
  "name": "markdown-live-editor",
  "displayName": "Markdown Live Editor",
  "description": "Live Markdown editor with split view preview",
  "version": "1.0.0",
  "publisher": "markdown-json-editor",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:markdownLiveEditor.editSelection",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdownLiveEditor.editSelection",
        "title": "Edit Markdown with Live Preview",
        "category": "Markdown"
      }
    ],
    "keybindings": [
      {
        "command": "markdownLiveEditor.editSelection",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "markdownLiveEditor.editSelection",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "@types/markdown-it": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "markdown-it": "^14.0.0",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-attrs": "^4.1.6"
  }
}
